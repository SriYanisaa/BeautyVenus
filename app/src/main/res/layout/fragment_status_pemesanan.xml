<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.StatusPemesanan"
    android:id="@+id/dialog_status">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="189dp"
            android:layout_height="183dp"
            android:layout_gravity="center"
            android:src="@drawable/centang_coklat"/>

        <TextView
            android:id="@+id/textappoinment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemesanan Berhasil !!!"
            android:padding="5dp"
            android:textSize="30sp"
            android:fontFamily="@font/montbold"
            android:textColor="#5c3028"/>

        <TextView
            android:layout_width="352dp"
            android:layout_height="138dp"
            android:text="@string/detail_status"
            android:textAlignment="center"
            android:fontFamily="@font/sukar"
            android:textSize="20sp"
            android:textColor="#a87a64"/>

        <Button
            android:id="@+id/backhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali ke Home"
            android:background="@drawable/button_shape"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Appoinment"
            android:padding="20dp"
            android:textColor="#5c3028"
            android:fontFamily="@font/sukar"
            android:textSize="17sp"/>

    </LinearLayout>

</FrameLayout>